{
  "name": "typescript-nodejs-bootstrap",
  "version": "0.2.0",
  "description": "Just a simple codebase to start a NodeJs API using Typescript & ES6. Project adapted from yeoman generator https://www.npmjs.com/package/generator-nodejs-cli-typescript",
  "repository": "",
  "license": "MIT",
  "scripts": {
    "start": "node dist/server.js",
    "clean": "rimraf dist",
    "build": "npm run clean && tsc --pretty",
    "test": "npm run build && mocha --compilers ts:ts-node/register --recursive test/**/*-spec.ts",
    "watch": "npm run build -- --watch",
    "watch:test": "npm run test -- --watch"
  },
  "author": {
    "name": "Eric Lara",
    "email": "ericzon@gmail.com"
  },
  "main": "dist/bin/server",
  "typings": "dist/bin/server.d.ts",
  "bin": {
    "app": "bin/server"
  },
  "files": [
    "bin",
    "dist"
  ],
  "devDependencies": {
    "@types/chai": "^3.4.35",
    "@types/commander": "^2.3.31",
    "@types/mocha": "^2.2.39",
    "@types/node": "^7.0.5",
    "@types/sinon": "^1.16.35",
    "@types/supertest": "^2.0.0",
    "chai": "^3.5.0",
    "mocha": "^3.2.0",
    "rimraf": "^2.6.1",
    "sinon": "^1.17.7",
    "supertest": "^3.0.0",
    "ts-node": "^2.1.0",
    "typescript": "^2.2.1"
  },
  "dependencies": {
    "@types/body-parser": "^1.16.0",
    "@types/compression": "0.0.33",
    "@types/cors": "^2.8.1",
    "@types/express": "^4.0.35",
    "@types/winston": "^2.2.0",
    "body-parser": "^1.17.1",
    "compression": "^1.6.2",
    "cors": "^2.8.1",
